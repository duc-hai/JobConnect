<div class="container">
    <h4 class="mt-4 text-center">Thêm mới tin tuyển dụng</h4>
    <form action="/recruiter/add-recruitment" id="add-recruitment" method="post" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <label for="title" class="label-control">Tiêu đề</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Nhập tiêu đề tin tuyển dụng">
        </div>

        <div class="form-group mt-3">
            <label for="image" class="label-control">Hình ảnh</label>
            <input type="file" name="image" id="image" class="form-control">
        </div>

        <div class="form-group mt-3">
            <label for="" class="label-control">Mức lương</label>
            <select name="salary" id="salary" class="form-control">
                <option value="Dưới 3 triệu">Dưới 3 triệu</option>
                <option value="3 - 5 triệu">3 - 5 triệu</option>
                <option value="5 - 7 triệu">5 - 7 triệu</option>
                <option value="7 - 10 triệu">7 - 10 triệu</option>
                <option value="10 - 15 triệu">10 - 15 triệu</option>
                <option value="15 - 20 triệu">15 - 20 triệu</option>
                <option value="20 - 30 triệu">20 - 30 triệu</option>
                <option value="30 - 50 triệu">30 - 50 triệu</option>
                <option value="Trên 50 triệu">Trên 50 triệu</option>
                <option value="Thỏa thuận">Thỏa thuận</option>
            </select>
        </div>


        <div class="form-group mt-3">
            <label for="" class="label-control">Địa chỉ</label>

            <input type="text" class="form-control" name="street" id="street" placeholder="Nhập tên đường, phường làm việc">

            <select name="province" id="province" class="form-control mt-2">
                <option value="">---Tỉnh thành---</option>
            </select>

            <select name="district" id="district" class="form-control mt-2">
                <option value="">---Quận huyện---</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="workingWay" class="label-control">Hình thức làm việc</label>
            <select class="form-control" name="workingWay" id="workingWay">
                <option value="Partime">Partime</option>
                <option value="Fulltime">Fulltime</option>
                <option value="Thực tập">Thực tập</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="position" class="label-control">Vị trí công việc</label>
            <select name="position" id="position" class="form-control">
                <option value="Nhân viên">Nhân viên</option>
                <option value="Trưởng nhóm">Trưởng nhóm</option>
                <option value="Trưởng / Phó phòng">Trưởng / Phó phòng</option>
                <option value="Quản lý / giám sát">Quản lý / giám sát</option>
                <option value="Trưởng chi nhánh">Trưởng chi nhánh</option>
                <option value="Phó giám đốc">Phó giám đốc</option>
                <option value="Giám đốc">Giám đốc</option>
                <option value="Thực tập sinh">Thực tập sinh</option>
            </select>
            {{!-- <input type="text" class="form-control" name="position" id="position"> --}}
        </div>

        <div class="form-group mt-3">
            <label for="profession" class="form-label">Ngành nghề</label>
            <select name="profession" id="profession" class="form-control">
                <option value="">Chọn ngành nghề</option>
                <option value="1">Kinh doanh / Bán hàng</option>
                <option value="3">Biên / Phiên dịch</option>
                <option value="4">Báo chí / Truyền hình</option>
