                <option value="39">Thiết kế đồ họa</option>
                <option value="42">Thời trang</option>
                <option value="43">Thực phẩm / Đồ uống</option>
                <option value="45">Tư vấn</option>
                <option value="46">Tổ chức sự kiện / Quà tặng</option>
                <option value="47">Vận tải / Kho vận</option>
